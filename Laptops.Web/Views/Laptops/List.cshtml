@{
}

@model List<Laptops.Web.Models.Entities.Laptop>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Laptops</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <div class="row pt-4 pb-3">
            <div class="col-6">

            </div>
            <div class="col-6 text-end">
                <a asp-controller="Laptops" asp-action="Add" class="btn btn-primary rounded-5">
                    <i class="bi bi-plus-square-fill"></i> Add New Product
                </a>
            </div>
        </div> 

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Price</th>
                    
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var laptops in Model)
                {
                    <tr>
                        <td>@laptops.Id</td>
                        <td>@laptops.Name</td>
                        <td>@laptops.Price</td>
                        
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Laptops" asp-action="Update" asp-route-id="@laptops.Id" class="btn btn-primary mx-2 rounded-3"><i class="bi bi-pencil-square"></i> Details </a>

                                <a asp-controller="Laptops" asp-action="Delete" asp-route-id="@laptops.Id" class="btn btn-danger mx-2 rounded-3">
                                    <i class="bi bi-trash2-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
