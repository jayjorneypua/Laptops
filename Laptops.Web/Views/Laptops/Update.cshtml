@* We will bind this in a viewModel in order to retrieve the information and send it back to the controller by adding a new class in the model folder *@

@model Laptops.Web.DTO.LaptopUpdateRequestDTO  //by writing this line, we can now access the properties in the Laptop

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Update Product Details</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Id" hidden />
            <div class="row">
                <div class="col-10">
                    <div asp-validation-summary="ModelOnly"></div>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="Name" class="form-control border-0 shadow" readonly />
                        <label asp-for="Name" class="form-label ms-2"></label>
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>

                    <label asp-for="Description" class="ms-2 text-muted"></label>
                    <textarea type="text" class="form-control border-0 shadow" asp-for="Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="Brand" class="form-control border-0 shadow" readonly />
                        <label asp-for="Brand" class="form-label ms-2"></label>
                    </div>
                    <span asp-validation-for="Brand" class="text-danger"></span>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="Price" class="form-control border-0 shadow" />
                        <label asp-for="Price" class="form-label ms-2"></label>
                    </div>
                    <span asp-validation-for="Price" class="text-danger"></span>

                    <div class="mt-3">
                        <input asp-for="Available" type="checkbox" class="form-check-input" id="Available" />
                        <label asp-for="Available" class="form-check-label" for="Available"></label>
                    </div>
                    <span asp-validation-for="Available" class="text-danger"></span>


                    <div class="form-floating py-2 col-12">
                        <input type="file" asp-for="Photo" name="photo" class="form-control border-0 shadow" />
                        <label asp-for="Photo" class="ms-2"></label>

                    </div>
                    <div class="row pt-2">
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn-primary form-control"><i class="bi bi-pen"></i> Update</button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Laptops" asp-action="List" class="btn btn-outline-primary border form-control"><i class="bi bi-arrow-return-left"></i> Back to List</a>
                        </div>
                    </div>
                </div>

                <div class="col-2">
                    <img src="@TempData["ImageUrl"]" width="100" style="border-radius:5px; border:1px solid #bbb9b9" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {

    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons lists table visualblocks wordcount',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | align lineheight | tinycomments | checklist numlist bullist indent outdent |'

        });
    </script>
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}